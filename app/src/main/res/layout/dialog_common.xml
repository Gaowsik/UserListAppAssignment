<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/padding_micro"
    app:cardElevation="@dimen/padding_micro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/component_height_medium"
        android:minHeight="@dimen/component_height_xsmall"
        android:orientation="vertical"
        android:padding="@dimen/padding_xsmall">

        <TextView
            android:id="@+id/dialogInfoTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Alert" />

        <TextView
            android:id="@+id/dialogInfoMessageTextView"
            android:layout_width="@dimen/padding_none"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xsmall"
            android:gravity="center"
            android:maxLines="3"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogInfoTitleTextView"
            tools:text="Requested Permissions Are Required to Continue..Please Allow and ContinueRequested Permissions Are Required to Continue..Please Allow and ContinueRequested Permissions Are Required to Continue..Please Allow and ContinueRequested Permissions Are Required to Continue..Please Allow and Continue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogInfoMessageTextView">

            <Button
                android:id="@+id/dialogInfoNegativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_xsmall"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_micro"
                android:paddingRight="@dimen/padding_micro"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:visibility="visible"
                tools:text="check my roster" />

            <Button
                android:id="@+id/dialogInfoPositiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_micro"
                android:paddingRight="@dimen/padding_micro"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                tools:text="check my roster" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>